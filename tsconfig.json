{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "scripthost",
      "dom",
      "es6"
    ],
    "importHelpers": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}